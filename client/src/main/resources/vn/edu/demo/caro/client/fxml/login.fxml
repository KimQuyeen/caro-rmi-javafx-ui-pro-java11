<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="vn.edu.demo.caro.client.controller.LoginController" styleClass="app-bg">
    <center>
        <HBox spacing="18" alignment="CENTER">
            <padding><Insets top="22" right="22" bottom="22" left="22"/></padding>

            <VBox spacing="10" prefWidth="420" styleClass="card-pad">
                <Label text="CARO" styleClass="h1"/>
                <Label text="Server-authoritative • RMI • JavaFX" styleClass="muted"/>
                <Separator/>
                <Label text="Kết nối" styleClass="h2"/>
                <GridPane hgap="10" vgap="10">
                    <Label text="Host:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="tfHost" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Port:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="tfPort" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Name:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="tfName" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                </GridPane>

                <Separator/>

                <Label text="Đăng nhập" styleClass="h2"/>
                <GridPane hgap="10" vgap="10">
                    <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="tfUsername" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <PasswordField fx:id="tfPassword" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                </GridPane>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Button fx:id="btnLogin" text="Đăng nhập" onAction="#onLogin" styleClass="primary"/>
                    <Button text="Đăng ký" onAction="#onRegister" styleClass="button secondary"/>

                    <Label fx:id="lbStatus" text="" styleClass="muted" wrapText="true"/>
                </HBox>
            </VBox>

            <VBox spacing="10" prefWidth="440" styleClass="card-pad">
                <Label text="Tính năng" styleClass="h1"/>
                <Label text="• Tạo phòng • Xem phòng trống • Vào phòng • Chơi nhanh\n• Chat toàn cục + chat phòng\n• Bảng xếp hạng (MySQL)\n• Kết bạn (MySQL)\n• Chơi với máy (AI minimax offline)\n• Admin: broadcast / warn / ban" wrapText="true" styleClass="muted"/>
                <Separator/>
                <Label text="Lưu ý vận hành" styleClass="h2"/>
                <Label text="1) Chạy server trước, kiểm tra port 1099 LISTEN\n2) DB đúng user/pass và schema đã tạo\n3) Client dùng host/port/name chính xác" wrapText="true" styleClass="muted"/>
            </VBox>
        </HBox>
    </center>
</BorderPane>
