<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="vn.edu.demo.caro.client.controller.GameController" styleClass="app-bg">

    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="card">
            <padding><Insets top="10" right="12" bottom="10" left="12"/></padding>

            <Button text="← Quay lại" onAction="#onBackToMain"/>
            <Button fx:id="btnUndo" text="Undo" onAction="#onUndo"/>
            <Button fx:id="btnRedo" text="Redo" onAction="#onRedo"/>
            <Button text="Đầu hàng" onAction="#onResign" styleClass="danger"/>

            <Separator orientation="VERTICAL"/>
            <VBox spacing="2">
                <Label fx:id="lbTitle" text="Caro" styleClass="h2"/>
                <Label fx:id="lbSub" text="Status" styleClass="muted"/>
            </VBox>

            <Region HBox.hgrow="ALWAYS"/>
        </HBox>
    </top>

    <center>
        <HBox spacing="14">
            <VBox spacing="10" styleClass="card-pad" HBox.hgrow="ALWAYS">
    <Label text="Bàn cờ" styleClass="h2"/>

    <ScrollPane fx:id="spBoard"
                fitToWidth="true"
                fitToHeight="true"
                VBox.vgrow="ALWAYS"
                pannable="true">
        <content>
            <GridPane fx:id="gridBoard" hgap="2" vgap="2">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
            </GridPane>
        </content>
    </ScrollPane>
</VBox>


            <VBox spacing="10" prefWidth="360" styleClass="card-pad">
                <Label text="Chat" styleClass="h2"/>
                <ListView fx:id="lvChat" VBox.vgrow="ALWAYS"/>

                <HBox spacing="8">
                    <TextField fx:id="tfChat" promptText="Nhập tin nhắn..." HBox.hgrow="ALWAYS"/>
                    <Button text="Gửi" onAction="#onSendChat" styleClass="primary"/>
                </HBox>
            </VBox>
        </HBox>
    </center>

    <padding><Insets top="18" right="18" bottom="18" left="18"/></padding>
</BorderPane>
