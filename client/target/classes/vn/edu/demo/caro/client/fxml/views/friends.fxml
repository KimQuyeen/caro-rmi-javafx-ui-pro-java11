<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="vn.edu.demo.caro.client.controller.view.FriendsViewController" spacing="14">
    <Label text="Bạn bè" styleClass="h1"/>

    <HBox spacing="14">
        <VBox spacing="10" styleClass="card-pad" prefWidth="520">
            <Label text="Danh sách bạn bè" styleClass="h2"/>
            <ListView fx:id="lvFriends" VBox.vgrow="ALWAYS"/>
        </VBox>

        <VBox spacing="10" styleClass="card-pad" prefWidth="520">
            <Label text="Gửi lời mời kết bạn" styleClass="h2"/>
            <HBox spacing="10">
                <TextField fx:id="tfUser" promptText="Nhập username..." HBox.hgrow="ALWAYS"/>
                <Button text="Gửi" onAction="#onSendRequest" styleClass="primary"/>
            </HBox>
            <Separator/>
            <Label text="Online" styleClass="h2"/>
            <ListView fx:id="lvOnline" VBox.vgrow="ALWAYS"/>
        </VBox>
    </HBox>
</VBox>
