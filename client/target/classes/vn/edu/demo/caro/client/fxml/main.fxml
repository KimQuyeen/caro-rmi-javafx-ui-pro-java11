<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="vn.edu.demo.caro.client.controller.MainController" styleClass="app-bg">
    <left>
        <VBox spacing="12" prefWidth="260" styleClass="sidebar">
            <padding><Insets top="18" right="14" bottom="18" left="14"/></padding>

            <VBox spacing="6" styleClass="card-pad">
                <Label text="CARO" styleClass="h1"/>
                <Label text="Server-authoritative • MySQL" styleClass="muted"/>
                <Separator/>
                <Label fx:id="lbUser" text="User" styleClass="h2"/>
                <Label fx:id="lbStatus" text="Status" styleClass="muted"/>
            </VBox>

            <VBox spacing="6">
               <Button fx:id="btnRooms" text="  Phòng và Ghép trận" styleClass="nav-btn"/>
                <Button fx:id="btnChat" text="  Chat toàn cục" styleClass="nav-btn"/>
                <Button fx:id="btnFriends" text="  Bạn bè" styleClass="nav-btn"/>
                <Button fx:id="btnLeaderboard" text="  Bảng xếp hạng" styleClass="nav-btn"/>
                <Button fx:id="btnAi" text="  Chơi với máy (AI)" styleClass="nav-btn"/>


            </VBox>

            <Region VBox.vgrow="ALWAYS"/>

            <Button fx:id="btnLogout" text="Đăng xuất" styleClass="danger"/>

        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentPane">
            <padding><Insets top="18" right="18" bottom="18" left="18"/></padding>
        </StackPane>
    </center>
</BorderPane>
