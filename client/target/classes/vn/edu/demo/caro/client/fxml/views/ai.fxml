<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="vn.edu.demo.caro.client.controller.view.AiViewController" spacing="14">
    <Label text="Chơi với máy (AI - Offline)" styleClass="h1"/>

    <VBox spacing="12" styleClass="card-pad" prefWidth="720">
        <Label text="Cấu hình AI" styleClass="h2"/>

        <GridPane hgap="12" vgap="12">
            <Label text="Độ sâu (depth):" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <ComboBox fx:id="cbDepth" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="220"/>

            <Label text="Lượt đi:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <ComboBox fx:id="cbFirst" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="220"/>
        </GridPane>

        <Separator/>
        <Button text="Bắt đầu trận AI" onAction="#onStartAi" styleClass="primary" maxWidth="240"/>
        <Label text="Ghi chú: chế độ AI chạy offline (không cần server). PvP vẫn là server-authoritative." styleClass="muted" wrapText="true"/>
    </VBox>
</VBox>
